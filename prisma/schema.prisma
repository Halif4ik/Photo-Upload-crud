generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  deviceId   String   @unique
  dateMode   Boolean  @default(false)
  name       String
  job        String
  image      String
  bio        String?
  linkedIn   String?
  instagram  String?
  twitter    String?
  website    String?
  goals      String?
  gender     String?
  sexuality  String?
  partner    String?
  icebreaker String?
  createdAt  DateTime @default(now())
}
